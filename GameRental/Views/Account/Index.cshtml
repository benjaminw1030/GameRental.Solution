@{
  Layout = "_Layout";
}

@using System.Security.Claims
@using GameRental.Models

<div class="jumbotron">
  <h2>Admin Login</h2>
</div>

@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  @using (Html.BeginForm("Logoff", "Account"))
  {
    <input type="submit" class="btn btn-default" value="Log out" />
  }
  @if (Model.Count == 0)
  {
    <p>You have not rented any games.</p>
  }
  else
  {
    <p>Rental History:</p>
    <ul>
    @foreach (Checkout checkout in Model)
    {
      <li>@Html.ActionLink(@checkout.Copy.Game.Title, "Details", "Games", new { Id = @checkout.Copy.GameId })</li>
    }
    </ul>
  }
}
else
{
  <p>@Html.ActionLink("Register", "Register")</p>
  <p>@Html.ActionLink("Log in", "Login")</p>
}
